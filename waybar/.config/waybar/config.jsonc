// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    //"width": 90%, // Waybar width
    "margin-top": 5,
    "margin-left": 150,
    "margin-right": 150,
    "spacing": 1, // Gaps between modules (4px)
    "reload_style_on_change": true,
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "mpd",
        "idle_inhibitor",
	"custom/spotify",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        //"keyboard-state",
        //"hyprland/language",
        "clock",
	"custom/power"
    ],
    // Modules configuration
    "hyprland/workspaces": {
        "all-outputs": false,
        "warp-on-scroll": false,
        "format": "{name}: {icon}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "Û∞àπ",
            "3": "ÔÅµ",
